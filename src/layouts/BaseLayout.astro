---
import { generateMetadata } from '../lib/seo';
import type { SEOParams } from '../lib/seo';

export interface Props {
  seo: SEOParams;
}

const { seo } = Astro.props;
const canonicalURL = new URL(seo.url || '', 'https://cosmeticoscoreanos.co');
---

<!doctype html>
<html lang="es-CO">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{seo.title}</title>
    <meta name="title" content={seo.title} />
    <meta name="description" content={seo.description} />
    <meta name="author" content="Cosméticos Coreanos Colombia" />
    <meta name="robots" content={seo.noindex ? 'noindex, nofollow' : 'index, follow'} />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL.toString()} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={seo.type === 'article' ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={seo.image || '/og-default.jpg'} />
    <meta property="og:locale" content="es_CO" />
    <meta property="og:site_name" content="Cosméticos Coreanos Colombia" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL.toString()} />
    <meta property="twitter:title" content={seo.title} />
    <meta property="twitter:description" content={seo.description} />
    <meta property="twitter:image" content={seo.image || '/og-default.jpg'} />
    
    <!-- Geo Tags for Colombia -->
    <meta name="geo.region" content="CO" />
    <meta name="geo.placename" content="Colombia" />
    
    <!-- Alternate Languages -->
    <link rel="alternate" hreflang="es-CO" href={canonicalURL.toString()} />
    <link rel="alternate" hreflang="es" href={canonicalURL.toString()} />
    
    <!-- JSON-LD Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(seo.schema)} />
    
    <!-- Preload critical assets -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
  
  :root {
    --color-primary: #2ecc71;
    --color-primary-dark: #27ae60;
    --color-secondary: #3498db;
    --color-accent: #e74c3c;
    --color-text: #2c3e50;
    --color-text-light: #7f8c8d;
    --color-bg: #ffffff;
    --color-bg-secondary: #f8f9fa;
    --color-border: #ecf0f1;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    color: var(--color-text);
    background: var(--color-bg);
    line-height: 1.6;
  }
  
  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  a:hover {
    color: var(--color-primary-dark);
  }
  
  img {
    max-width: 100%;
    height: auto;
  }
  
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.3;
    font-weight: 600;
  }
  
  h1 { font-size: 2.5rem; }
  h2 { font-size: 2rem; }
  h3 { font-size: 1.5rem; }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary);
    color: white;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .btn:hover {
    background: var(--color-primary-dark);
    transform: translateY(-1px);
  }
</style>
